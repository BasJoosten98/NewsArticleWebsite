@{
    ViewBag.Title = "error";
}
<h1 >Error</h1>
<hr />
<div class="alert alert-danger" role="alert">
    <p>Something went wrong. Please try again later or make contact with us.</p>
</div>
<a class="btn btn-default" role="button" asp-controller="home" asp-action="index">Return to home</a>
<hr />
<h2>Error details</h2>
<hr />
<div class="alert alert-danger">
    <h4>Exception Path</h4>
    <hr />
    <p>
        @ViewBag.ExceptionPath
    </p>
</div>
<div class="alert alert-danger">
    <h4>Exception Message</h4>
    <hr />
    <p>
        @ViewBag.ExceptionMessage
    </p>
</div>
<div class="alert alert-danger">
    <h4>Exception Strack Trace</h4>
    <hr />
    <p>
        @ViewBag.Stacktrace
    </p>
</div>

