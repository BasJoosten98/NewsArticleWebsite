@{
    @model Article
    ViewBag.Title = "Edit article";
}
<h1>Edit article</h1>
<hr />
<form method="post" asp-controller="Articles" asp-action="edit">
    <input hidden asp-for="Id" />
    <input hidden asp-for="UserId" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Article title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    @*<div class="form-group">
            <label asp-for="Author">Author</label>
            <input type="text" class="form-control" asp-for="Author" placeholder="Author name">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>*@
    <div class="form-group">
        <label asp-for="Content">Content</label>
        <textarea class="form-control" rows="3" asp-for="Content" placeholder="Article content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>
    <a class="btn btn-danger" role="button" asp-controller="articles" asp-action="index">Cancel</a>

</form>